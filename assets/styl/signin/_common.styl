.signin__container
	background-image: url(../img/signin-bg4.jpg)
	background-size: cover
	background-position: center
	background-repeat: no-repeat

.signin
	absolute top 10px left 10px right 10px bottom 10px

.signin__top
	width: 100%
	height: 46%
	position: relative

.signin__bottom
	width: 100%
	height: 54%
	position: relative

.signin__switch-lang
	absolute top 3px right 7px
	font-size: 15px
	color #000

.signin__form
	margin 0 auto
	.list-inset
		margin 20px 0
	input
		line-height: 34px
		padding-top: 0
		font-size: 16px
	.item-input
		border 0
		margin 0
		&:first-child
			border-bottom: 1px solid #ddd

.signin__logo
	width: 120px
	display: block
	absolute top 50% left 50%
	margin: -60px 0 0 -60px

.signin__btn
	line-height: 47px
	border 0
	text-transform uppercase

.signin__dont-have-account
	cursor: pointer
	text-decoration: none
	font-size: 15px
	color #fff



@media (min-width: 399px)
	.signin__form
		max-width: 379px
