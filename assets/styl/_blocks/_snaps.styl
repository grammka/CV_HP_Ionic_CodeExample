$snap-border-color = #D1D7E0
$snap-inside-border-color = #F0F2F5



.snap
	background-color: #fff
	border 1px solid $snap-border-color
	margin-top: 15px
	position: relative
	border-radius 2px
	&:first-child
		margin-top: 0

.snap__header
	min-height 50px
	border-bottom 1px solid $snap-inside-border-color
	padding 10px 0
	position: relative

.snap__header__icon
	width: 30px
	height-lineheight(30px)
	absolute top 10px left 10px
	text-align: center
	font-size: 30px

.snap__header__icon_job:before
	content sl-icon-toolbox

.snap__header__icon_quote:before
	content sl-icon-file-edit-2

.snap__header__icon_pr:before
	content sl-icon-newspaper

.snap__header__icon_event:before
	content sl-icon-calendar-1

.snap__header__icon_idea:before
	content sl-icon-megaphone-1

.snap__header__hidden-title
.snap__header__title
	line-height: 20px
	font-weight 600
	font-size: 14px
	text-align: left

.snap__header__hidden-title
	opacity: 0
	color transparent

.snap__header__title__container
	absolute top 0 left 55px right 10px bottom 0
	overflow: auto
	white-space: nowrap
	text-align: center
	font-size: 0
	&:before
		content: ''
		height: 100%
		display-inline-block()
		vertical-align: middle

.snap__header__title
	width: 100%
	white-space: normal
	display-inline-block()
	vertical-align: middle



