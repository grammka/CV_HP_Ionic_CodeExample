.snap__content
	padding 10px
	position: relative

.snap__idea-content
	min-height: 30px
	display: block
	padding 10px 10px 10px 60px
	position: relative
	color #000
	text-decoration: none

.snap__teaser
	font-size: 13px
	br
		content ''
		display: block
		margin-top 5px
	a
		color $color_blue_darken
	p
		&:first-child
			margin-top: 0
		&:last-child
			margin-bottom: 0



.snap__footer
	padding 2px 10px
	border-top: 1px solid $snap-inside-border-color
	position: relative
	font-size: 11px

.snap__author-name
	font-weight 600

.snap__posted-date
	color #acb0b7

.snap__edit-btns
	height: 15px
	absolute top 4px right 5px
	z-index: 10
	font-size: 0
	display-inline-block()

.snap__edit-btn
	height-lineheight(15px)
	margin-left: 5px
	padding 0 5px
	cursor: pointer
	font-size: 10px
	font-weight 600
	text-transform lowercase
	color #63696F
	border-radius 1px
	no-select()
	display-inline-block()
	.snap_answer &
		font-size: 9px
	&:first-child
		margin-left: 0
	&:hover
		color #fff

.snap__edit-btn_edit
	&:hover
		background-color: $color_dark-gray-blue

.snap__edit-btn_remove
	&:hover
		background-color: $color_red
