.attachments__container
	background-color: #fff

.attachments
	border 1px solid #ccc

.attachments__list
	padding-bottom 5px
	position: relative
	&:after
		content: ''
		display: block
		width: 100%
		height: 0
		absolute bottom -1px left 0
		border-bottom 1px dashed #ccc

.attachments__list__thumb
	background-size cover
	background-position center
	margin 5px 0 0 5px
	position: relative
	overflow hidden
	display-inline-block()
	&:before
		content ''
		width: 100%
		height: 100%
		display: block
		absolute top 0 left 0
		z-index: 10
		border-radius 2px
		box-shadow rgba(#000, 0.3) 0 0 1px 0 inset
	&:hover
		&:after
			content ''
			width: 100%
			height: 100%
			display: block
			background-color: rgba(#000, 0.5)
			absolute top 0 left 0
			z-index: 10
		.attachments__list__thumb__remove-btn
			display: block

.attachments__list__thumb__size
	height: 20px
	line-height: 20px
	background-color: rgba(#000, 0.5)
	padding 0 5px
	absolute bottom 0 left 0 right 0
	font-weight 600
	font-size: 11px
	color #fff

.attachments__list__thumb__remove-btn
	display: none
	width: 40px
	height-lineheight(40px)
	background-color: rgba(#000, 0.3)
	absolute top 50% left 50%
	margin -20px 0 0 -20px
	z-index: 20
	cursor: pointer
	font-size: 12px
	font-weight 600
	text-align: center
	color #fff
	border-radius 50%
	&:hover
		background-color: rgba(#000, 0.6)
