.btn
.fbtn
	display: block
	border 1px solid transparent
	position: relative
	cursor: pointer
	white-space: nowrap
	text-decoration: none !important
	text-transform uppercase
	font-weight: 600
	box-sizing border-box
	border-radius 2px
	no-select()
	input
		position: absolute
		left: -99999px
	.sl-icon
		height: 100%
		line-height: inherit
	&.active,
	&[disabled],
	&.disabled
		cursor: default
	&[disabled],
	&.disabled
		background-color #ccc !important
		color: #aaa

.fbtn
	cursor: default

.btn_inline
	display-inline-block()

.btns
	line-height: 0
	font-size: 0
	white-space nowrap
	.btn
	.fbtn
		margin-left: -1px
		border-radius 0
		display-inline-block()
		&:first-child
			border-radius left 2px
		&:last-child
			border-radius right 2px



