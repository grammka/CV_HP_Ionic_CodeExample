$tabs_colors = {
	white:        #fff                    #E7EAEF                             #fff,
	light:        #E7EAEF                 #fff                                #E7EAEF,
	red:          $color_red              darken($color_red, 10%)             darken($color_red, 20%),
	green:        $color_green            darken($color_green, 10%)           darken($color_green, 20%),
	orange:       $color_orange           darken($color_orange, 10%)          darken($color_orange, 20%),
	gray-blue:    $color_gray-blue        darken($color_gray-blue, 10%)       darken($color_gray-blue, 20%),
	dark-blue:    $color_dark-gray-blue   darken($color_dark-gray-blue, 10%)  darken($color_dark-gray-blue, 20%),
	light-black:  $color_light-black      darken($color_light-black, 10%)     darken($color_light-black, 20%),
	black:        $color_black            darken($color_black, 10%)           darken($color_black, 20%),
	content:      $content-bg-color       #fff                                $content-bg-color
}

for $name, $color in $tabs_colors
	.fbtn_{$name}
		background-color $color[0]
	.btn_{$name}
		background-color $color[0]
		&:hover
			background-color $color[1]
		&:active
			background-color $color[2]



.btn_with-l-icon
	position: relative
	text-transform: none !important
	&.btn_24
		padding-left: 24px + 9px
	&.btn_36
		padding-left: 36px + 9px
	&.btn_40
		padding-left: 40px + 13px
	&.btn_50
		padding-left: 50px + 15px

.btn__l-icon
	line-height: inherit
	display: block
	border-right: 1px solid
	absolute top 0 left 0 bottom 0
	text-align: center
	color: #fff
	.btn_24 &
		width: 24px !important
		font-size: 14px
	.btn_36 &
		width: 36px !important
		font-size: 17px
	.btn_40 &
		width: 40px !important
		font-size: 20px
	.btn_50 &
		width: 50px !important
		font-size: 20px
	.btn_blue &
		border-color darken(#30bafe, 20%)

