.pre-field
	padding: 5px 10px
	background-color: $text-bg-color
	border: 1px solid #ccc
	margin-bottom -1px
	position: relative
	z-index: 20
	font-size: 12px
	color: #7B7777
	&.error
		background-color: $color_red
		border-color $color_dark-red
		color #fff
		a
			color #fff !important
			text-decoration underline
