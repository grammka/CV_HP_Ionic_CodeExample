.droplist
	display: block
	background-color: #aaa
	font-size: 12px

.droplist__chosen
	height-lineheight(28px)
	padding 0 30px 0 ($padding / 2)
	position: relative

.droplist__arr
	width: 10px
	height: 10px
	absolute top 50% right ($padding / 2)
	margin-top: -5px
	arrow-bottom(#aaa, 5px)

.droplist__options
	display: block

.droplist__option
	display: block
