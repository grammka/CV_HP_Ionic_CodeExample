.checkbox__wrap,
.radio__wrap
	display: block
	line-height 18px
	padding-left: 27px
	position: relative
	cursor: pointer
	font-size: 13px
	white-space normal
	no-select()

.checkbox__wrap
	input[type="checkbox"]
		fixed left -99999px
		& + .custom-checkbox
			background: #fff
			border: 1px solid #D7DCEA
			margin-right: 10px
			padding: 8px
			absolute top 0 left 0
			display-inline-block()
		&:checked
			& + .custom-checkbox
				border: 1px solid #adb8c0
				&:after
					content: '\2714'
					absolute top -1px left 3px
					font-size: 13px
					color: #335B89
	&:active
		input[type="checkbox"]
		& + .custom-checkbox
		&:checked + .custom-checkbox
			border-color: #C8CEDD

.radio__wrap
	input[type="radio"]
		fixed left -99999px
		& + .custom-radio
			background-color: #fff
			border: 1px solid #D7DCEA
			padding: 8px
			position: relative
			display-inline-block()
		&:checked
			& + .custom-radio:after
				content: ' '
				width: 12px
				height: 12px
				background: #99a1a7
				absolute top 3px left 3px
				text-shadow: 0px
				font-size: 32px
			& + .custom-radio
				margin-right: 10px
				background-color: #e9ecee
				border: 1px solid #adb8c0
				color: #99a1a7
