.select__list
	font-size: 0
	.select
		margin-left 6px
		&:first-child
			margin-left: 0

.select
.bselect
	background-color: #fff
	position: relative
	display-inline-block()
	&:before
		content: ''
		display: block
		width: 0
		height: 0
		border-top: 5px solid #333
		border-left: 5px solid transparent
		border-right: 5px solid transparent
		position: absolute
		top: 50%
		right: 12px
		margin-top: -2px
		z-index: 30
		pointer-events: none
	select
		width: 100%
		height: 100%
		line-height inherit
		border: 0
		background: none
		padding: 0 30px 0 12px
		position: relative
		z-index: 20
		font-family: "Open Sans", Tahoma, Arial, sans-serif
		font-weight: normal
		color #333
		-webkit-appearance: none
		-moz-appearance: none
		border-radius 0
		box-sizing border-box
		&::-ms-expand
			display: none
		&.default
			color: $light-text-color !important
		&:focus
			border-color: #bcbcbc
		&.t-validate-highlight
		.t-validate-highlight &
			&.ng-dirty.ng-valid
				background-color #CAFFDA
				border-color #50D077
		.t-validate-highlight.ng-submitted &
			&.ng-invalid
				background: #FFE5E2
				border-color: #E8958C
				color: #EC0000 !important
				+input-placeholder()
					color: #EC0000 !important
		.t-validate-failed &
		&.t-validate-failed
			background-color: #FFD3D3 !important
			border-color #EC0000 !important
			color: #EC0000 !important
		&.disabled,
		&[disabled]
			background-color #ddd
			border-color #ccc

.select
.bselect
	select
		border 1px solid #ccc



.select_32
	height-lineheight(32px)
	select
		font-size: 13px

.select_36
	height-lineheight(36px)
	select
		font-size: 14px

.select_40
	height-lineheight(40px)
	select
		font-size: 14px



@-moz-document url-prefix()
	.select__list
		-moz-appearance: window
	