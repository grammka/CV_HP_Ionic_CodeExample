body.s-config
	overflow-y auto


.config__bg
	width: 100%
	height: 100%
	background-image: url(/data/img/bg9.jpg)
	background-repeat: no-repeat
	background-size: cover
	background-position: center
	fixed top 0 left 0
	z-index: -1
	&:before
		content ''
		display: block
		width: 100%
		height: 100%
		background-color: rgba(72, 52, 40, 0.6)
		absolute top 0 left 0
		z-index: 10

.config
	overflow scroll
	padding: 10px 10px 50px 10px

.config__header__container
	background-color: $header-bg-color

.config__header
	position: relative
	padding 30px 54px 30px 100px

.config__logo
	width: 60px
	absolute top 50% left 0
	margin-top: -33px
	filter invert(100%)
	-webkit-filter invert(100%)
	img
		width: 100%

.config__title
	line-height: 20px
	margin-bottom: 15px
	font-weight 600
	font-size: 20px
	color #fff

.config__desc
	font-size: 14px
	color #B0C5D6


.config__steps
	display: block

.config__step
	position: relative

.config__step_checked
	.config__step__check
		z-index: 10
		opacity: 1
		transform scale(1)

.config__step__check
	display: none !important
	width: 56px
	height-lineheight(44px)
	opacity: 0
	absolute top 0 left 0
	z-index: -100
	color $color_ocean
	font-size: 24px
	font-weight: normal
	text-align: center
	transform scale(5)
	transition transform 0.16s linear, opacity 0.16s linear
	no-select()

.config__step__loader
	width: 12px
	height: 12px
	absolute top $padding left $padding
	border-radius 50%
	animation(circle-loading 1.2s infinite)
	transform scale(0.5)

.config__step__title
	height-lineheight(44px)
	font-size: 17px

.config__step__description
	line-height: 20px
	margin-bottom: $padding
	font-size: 14px
	color $light-text-color




.config__subscriptions
	margin 0 -10px
	font-size: 0

.config__subscription__wrapper
	display-inline-block()
	&.disabled
		color #aaa
		.config__subscription__price
		.config__subscription__price-desc
			background-color: #aaa
		.config__subscription__price-desc
			color #fff

.config__subscription
	padding 0 10px

.config__subscription__in
	border 1px solid #ddd
	text-align: center

.config__subscription__title
	display: none
	height-lineheight(44px)
	padding-top 5px
	font-weight 600
	font-size: 26px

.config__subscription__subtitle
	display: none
	height: 22px
	padding-bottom: 10px
	color $light-text-color
	font-size: 14px

.config__subscription__price
.config__subscription__price-desc
	background-color: #fafafa

.config__subscription__price
	padding 30px 0
	border-bottom 1px solid #ddd
	background-color: transparent
	font-size: 40px
	fontfont-weight 600lor $color_ocean

.config__subscription__price-desc
	display: none
	padding-bottom: 10px
	font-size: 14px
	color #BFECCD

.config__subscription__pricelist
	display: block

.config__subscription__pricelist__item
	min-height: 17px
	line-height: 17px
	padding: 8px 20px
	font-size: 12px
	font-weight: bold
	text-align: center
	color #888
	&:first-child
		border-top: 0
		padding-top: 20px
	&:last-child
		padding-bottom: 20px
	&:nth-child(2n)
		background-color: #fafafa

.config__subscription__select
	padding 20px 0
	font-size: 16px
	.selected
		font-size: 0
		cursor: default
		color #fff
		.config__subscription__select__check
			opacity: 1

.config__subscription__select__btn
	max-width: 180px
	display: block
	margin: 0 auto

.config__subscription__select__check
	width: 20px
	height-lineheight(20px)
	absolute top 0 left 0 right 0 bottom 0
	margin auto
	opacity: 0
	font-size: 20px
	text-align: center



.config__payment
	display: block

.config__payment__card
	width: 500px
	padding 20px
	border 1px solid #ddd
